    "gulp-include": "^2.1.0",
    "gulp-istanbul": "^0.10.4",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^2.0.0-alpha",
    "gulp-tslint": "^5.0.0",
    "istanbul": "^0.4.3",
    "json-loader": "0.5.4",
    "merge2": "^1.0.2",
    "remap-istanbul": "^0.6.3",
    "ts-loader": "0.8.2",
    "tslint": "^3.8.1",
    "tslint-loader": "^2.1.4",
    "webpack-stream": "3.2.0"
  }
}

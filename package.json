{
  "name": "Microservice_Nodejs_layers",
  "version": "1.0.0",
  "description": "Microservice nodejs layering that show, API, Business and data layer and its communication",
  "main": "app.js",
  "typescript": {
    "definition": "./typings/index.d.ts"
  },
  "scripts": {
    "start": "node ./dist/app.js",
    "post-install": "./node_modules/.bin/typings install",
    "dev": "./node_modules/.bin/webpack --progress --colors --config webpack.server.config.js",
    "build": "npm install && npm run post-install && npm run dev",
    "prod": "./node_modules/.bin/webpack --progress --colors --config webpack.server.config.js -p",
    "test": "mocha --colors --reporter spec --recursive dist/js/test/**/*.js",
    "itest": "./node_modules/.bin/istanbul test ./node_modules/.bin/_mocha -- --colors --reporter spec --recursive dist/js/test/**/*.js",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --recursive -R spec --dir ./dist/js/app/js",
    "gulp": "gulp default",
    "nodemon": "nodemon --watch dist app.js"
  },
  "author": {
    "email": "n.shahm@gmail.com",
    "name": "Shahm Nattarshah"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "http://localhost:4873/"
  },
  "dependencies": {
    "base-api": "*",
    "base-dal": "*",
    "base-service": "*",
    "body-parser": "1.15.0",
    "chai": "3.5.0",
    "config": "1.20.1",
    "cookie-parser": "1.4.1",
    "entity-employee": "*",
    "express": "4.13.4",
    "gulp-clean": "0.3.2",
    "gulp-env": "0.4.0",
    "gulp-exec": "2.1.2",
    "gulp-install": "0.6.0",
    "gulp-mocha": "2.2.0",
    "gulp-typescript": "2.13.0",
    "gulp-typings": "1.3.4",
    "gulp-uglify": "^1.5.3",
    "inversify": "2.0.0-beta.1",
    "logger": "*",
    "mocha": "2.4.5",
    "mongoose": "4.4.12",
    "mongoose-error-parser": "*",
    "morgan": "1.7.0",
    "reflect-metadata": "0.1.3",
    "run-sequence": "1.1.5",
    "sinon": "1.17.3",
    "source-map-support": "0.4.0",
    "typings": "0.7.12",
    "webpack": "1.12.15",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.10.0",
    "winston": "2.2.0",

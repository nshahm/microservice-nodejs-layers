{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
   "source": {
    "include": [ "dist/src/" ],
    "includePattern": ".+\\.js(doc)?$"
    
    },
    "plugins": [],
    "templates": {
        "systemName"            : "Employee microservice",
        "navType"               : "inline",
        "theme"                 : "flatly",
        "linenums"              : "true",
        "collapseSymbols"       : "true",
        "inverseNav"            : "false",
        "outputSourceFiles"     : "true" ,
        "outputSourcePath"      : "true",
        "dateFormat"            : "default",
        "syntaxTheme"           : "default",
        "sort"                  : "true"
    },
    "opts": {
        "encoding": "utf8",              
        "destination": "./dist/docs/doc",       
        "recurse": true
    }
}